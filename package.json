{
    "name": "@doolooper/dodate",
    "version": "0.1.1",
    "description": "A simple immutable solution to jalali/shamsi date without timezone",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "git@github.com:Doolooper/DoDate.git"
    },
    "author": "Mahdi Harati <doolooper@outlook.com>",
    "keywords": [
        "shamsi",
        "jalali"
    ],
    "license": "MIT",
    "private": false,
    "files": [
        "dist/**/*"
    ],
    "dependencies": {
        "dayjs": "1.10.4",
        "jalaali-js": "1.1.5"
    },
    "devDependencies": {
        "@types/chai": "4.2.16",
        "@types/jalaali-js": "1.1.0",
        "@types/mocha": "8.2.2",
        "@typescript-eslint/eslint-plugin": "4.22.0",
        "@typescript-eslint/parser": "4.22.0",
        "chai": "4.3.4",
        "eslint": "7.24.0",
        "eslint-config-prettier": "8.2.0",
        "eslint-plugin-prettier": "3.4.0",
        "mocha": "8.3.2",
        "prettier": "2.2.1",
        "rimraf": "3.0.2",
        "ts-node": "9.1.1",
        "typescript": "4.2.4"
    },
    "scripts": {
        "clean": "rimraf ./dist",
        "build": "yarn clean && tsc",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint \"src/**/*.ts\"",
        "test": "mocha -r ts-node/register test/**/*.test.ts",
        "prepare": "yarn build",
        "prepublishOnly": "yarn test && yarn lint",
        "preversion": "yarn lint",
        "version": "yarn format && git add -A src",
        "postversion": "git push && git push --tags"
    }
}
