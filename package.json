{
    "name": "@doolooper/dodate",
    "version": "0.1.2",
    "description": "A simple immutable solution to jalali/shamsi date without timezone",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "git@github.com:Doolooper/DoDate.git"
    },
    "author": "Mahdi Harati <doolooper@outlook.com>",
    "keywords": [
        "shamsi",
        "jalali"
    ],
    "license": "MIT",
    "private": false,
    "files": [
        "dist/**/*"
    ],
    "dependencies": {
        "dayjs": "1.11.10",
        "jalaali-js": "1.2.6"
    },
    "devDependencies": {
        "@types/chai": "4.3.9",
        "@types/jalaali-js": "1.1.2",
        "@types/mocha": "10.0.3",
        "@typescript-eslint/eslint-plugin": "6.9.0",
        "@typescript-eslint/parser": "6.9.0",
        "chai": "4.3.10",
        "eslint": "8.52.0",
        "eslint-config-prettier": "9.0.0",
        "eslint-plugin-prettier": "5.0.1",
        "mocha": "10.2.0",
        "prettier": "3.0.3",
        "rimraf": "5.0.5",
        "ts-node": "10.9.1",
        "typescript": "5.2.2"
    },
    "scripts": {
        "clean": "rimraf ./dist",
        "build": "yarn clean && tsc",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint \"src/**/*.ts\"",
        "test": "mocha -r ts-node/register test/**/*.test.ts",
        "prepare": "yarn build",
        "prepublishOnly": "yarn test && yarn lint",
        "preversion": "yarn lint",
        "version": "yarn format && git add -A src",
        "postversion": "git push && git push --tags"
    }
}
