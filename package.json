{
    "name": "@doolooper/dodate",
    "version": "0.1.2",
    "description": "A simple immutable solution to jalali/shamsi date without timezone",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "git@github.com:Doolooper/DoDate.git"
    },
    "author": "Mahdi Harati <doolooper@outlook.com>",
    "keywords": [
        "shamsi",
        "jalali"
    ],
    "license": "MIT",
    "private": false,
    "files": [
        "dist/**/*"
    ],
    "dependencies": {
        "dayjs": "1.11.6",
        "jalaali-js": "1.2.6"
    },
    "devDependencies": {
        "@types/chai": "4.3.4",
        "@types/jalaali-js": "1.1.0",
        "@types/mocha": "10.0.0",
        "@typescript-eslint/eslint-plugin": "5.44.0",
        "@typescript-eslint/parser": "5.44.0",
        "chai": "4.3.7",
        "eslint": "8.28.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-prettier": "4.2.1",
        "mocha": "10.1.0",
        "prettier": "2.7.1",
        "rimraf": "3.0.2",
        "ts-node": "10.9.1",
        "typescript": "4.9.3"
    },
    "scripts": {
        "clean": "rimraf ./dist",
        "build": "yarn clean && tsc",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint \"src/**/*.ts\"",
        "test": "mocha -r ts-node/register test/**/*.test.ts",
        "prepare": "yarn build",
        "prepublishOnly": "yarn test && yarn lint",
        "preversion": "yarn lint",
        "version": "yarn format && git add -A src",
        "postversion": "git push && git push --tags"
    }
}
